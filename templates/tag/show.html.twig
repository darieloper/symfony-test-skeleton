{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block containerTitle %}
    <a class="btn btn-dark mr-2" href="{{ path('tag_index') }}">Back</a> Tags
{% endblock %}

{% block containerActions %}
    {{ include('tag/_delete_form.html.twig') }}
    <a class="btn btn-primary float-right mr-1" href="{{ path('tag_edit', {'id': tag.id}) }}">Edit</a>
{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
