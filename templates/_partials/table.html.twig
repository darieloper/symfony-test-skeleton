<table id="table" class="table" data-no-sort="{{ noSort is defined ? noSort : '' }}" data-filter="{{ filterBy }}">
    <thead>
        <tr>
            {% if noId is not defined %}
                <th>Id</th>
            {% endif %}
            {% block thead %}{% endblock %}
            {% block headActions %}<th>Actions</th>{% endblock %}
        </tr>
    </thead>
    <tbody>
    {% for record in records %}
        <tr>
            {% if noId is not defined %}
                <td>{{ record.id }}</td>
            {% endif %}
            {% block tbody %}{% endblock %}
            {% block tbodyActions %}
                {% include '_partials/table_actions.html.twig' with { model: record } %}
            {% endblock %}
        </tr>
    {% else %}
        <tr>
            {% block noData %}
                <td colspan="6" class="text-center">
                    <div class="alert alert-warning">No records found</div>
                </td>
            {% endblock %}
        </tr>
    {% endfor %}
    </tbody>
</table>